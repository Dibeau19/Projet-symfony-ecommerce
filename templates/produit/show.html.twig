{% extends 'base.html.twig' %}

{% block title %}{% trans %} produit {% endtrans %} - {{ produit.nom }}{% endblock %}

{% block body %}
<div class="container mt-4 mb-5">
    <div class="row">
        
        <div class="col-lg-8">
            {% set images = produit.images %}

            {% if images is not empty %}
                {% for image in images %}
                    <div class="mb-4"> 
                        <img src="{{ asset('uploads/' ~ image.url) }}" 
                             class="img-fluid w-100 rounded shadow-sm" 
                             alt="{{ produit.nom }}">
                    </div>
                {% endfor %}
            {% else %}
                <div class="d-flex align-items-center justify-content-center bg-light rounded shadow-sm" style="height: 500px;">
                    <span class="text-muted fs-4">{% trans %} pasImage {% endtrans %}</span>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-3" style="position: sticky; top: 2rem; z-index: 10;">
                <div class="card-body">
                    <h5 class="text-muted text-uppercase">{{ produit.marque }}</h5>
                    <h1 class="h2 fw-bold">{{ produit.nom }}</h1>
                    
                    <div class="h3 text-primary my-3">
                        {{ produit.prix }} â‚¬
                    </div>

                    <p class="card-text text-muted">
                        {{ produit.description }}
                    </p>

                    <hr>

                    <div class="d-grid gap-2 mb-3">
                         {% if produit.stock > 0 %}
                            <div 
                            class="d-flex flex-column"
                                data-controller="panier" 
                                data-panier-add-url-value="{{ path('panier_add', {id: produit.id}) }}"
                            >

                                <button 
                                    class="btn btn-success btn-lg w-100"
                                    data-action="click->panier#add"
                                >
                                    {% trans %} ajouterPanier {% endtrans %}
                                </button>

                                <div 
                                    class="text-success fw-bold mt-2 d-none" 
                                    data-panier-target="successMessage"
                                >
                                    {% trans %} produitAjoute {% endtrans %}
                                </div>

                            </div>
                         {% else %}
                            <button class="btn btn-secondary btn-lg" disabled>{% trans %} ruptureStock {% endtrans %}</button>
                         {% endif %}
                    </div>

                    <ul class="list-group list-group-flush small mt-4">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {% trans %} reference {% endtrans %}
                            <span class="badge bg-secondary rounded-pill">{{ produit.id }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Stock
                            <span class="fw-bold {{ produit.stock > 0 ? 'text-success' : 'text-danger' }}">
                                {{ produit.stock }} {% trans %} piece {% endtrans %}
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}