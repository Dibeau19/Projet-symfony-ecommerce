{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}email{% endtrans %}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{% trans %}roles{% endtrans %}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}motDePasse{% endtrans %}</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>{% trans %}nom{% endtrans %}</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>{% trans %}prenom{% endtrans %}</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>{% trans %}adresses{% endtrans %}</th>
                <td>
                    {% for adresse in user.adresses %}
                        {{ adresse }}<br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_admin') }}">{% trans %}retourListe{% endtrans %}</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">{% trans %}modifier{% endtrans %}</a>

    {{ include('user/_delete_form.html.twig') }}
{% else %}
    <h1>{% trans %}pasAutorise{% endtrans %}</h1>
{% endif %}
{% endblock %}
