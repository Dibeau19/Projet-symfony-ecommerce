{% extends 'base.html.twig' %}

{% block title %}Pantalon index{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
    <h1 class='text-center'>Pantalon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Marque</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Status</th>
                <th>Taille</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for pantalon in pantalons %}
            <tr>
                <td>{{ pantalon.id }}</td>
                <td>{{ pantalon.nom }}</td>
                <td>{{ pantalon.prix }}</td>
                <td>{{ pantalon.marque }}</td>
                <td>{{ pantalon.description }}</td>
                <td>{{ pantalon.stock }}</td>
                <td>{{ pantalon.status.name  }}</td>
                <td>{{ pantalon.taille }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('app_pantalon_show', {'id': pantalon.id}) }}">show</a>
                        <a href="{{ path('app_pantalon_edit', {'id': pantalon.id}) }}">edit</a>
                    </td>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pantalon_new') }}">Create new</a>
{% endif %}

<h1 class="mb-4 text-center">Nos pantalons</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
    {% for pantalon in pantalons %}
            <div class="col">
                <div class="card h-100 shadow-sm card-hover">

                    {% set image = pantalon.getImages()|first %}
                    {% if image %}
                        <img src="{{ asset('uploads/' ~ image.url) }}" 
                            class="card-img-top" 
                            alt="{{ pantalon.nom }}">
                    {% else %}
                        <div class="card-img-top bg-light text-center" style="height:200px; line-height:200px;">
                            Pas d'image
                        </div>
                    {% endif %}

                    <div class="card-body text-center">
                        <h5 class="card-title">{{ pantalon.nom }}</h5>
                        <p class="card-text text-muted">{{ pantalon.description }}</p>
                        <p class="fw-bold">{{ pantalon.prix }} â‚¬</p>
                    </div>

                    <a href="{{ path('app_' ~ pantalon.type ~ '_show', {'id': pantalon.id}) }}" 
                    class="stretched-link"></a>

                </div>
            </div>
    {% endfor %}
</div>
{% endblock %}
