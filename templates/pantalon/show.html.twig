{% extends 'base.html.twig' %}

{% block title %}Pantalon{% endblock %}

{% block body %}
    <h1>Pantalon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pantalon.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pantalon.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ pantalon.prix }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ pantalon.marque }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pantalon.description }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ pantalon.stock }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ pantalon.status.name }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ pantalon.taille }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_home') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_pantalon_edit', {'id': pantalon.id}) }}">edit</a>
    
    {{ include('pantalon/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
