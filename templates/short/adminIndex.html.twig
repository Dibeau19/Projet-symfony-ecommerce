{% extends 'base.html.twig' %}

{% block title %}{% trans %} shorts {% endtrans %} index{% endblock %}

{% block body %}


{% if is_granted('ROLE_ADMIN') %}
<div class="container mt-3"> 
    <h1 class='text-center'>{% trans %} shorts {% endtrans %} index</h1>

    <div class="alert alert-info text-center py-2">
        <strong>{{ shorts.getTotalItemCount }}</strong>  {% trans %} shorts {% endtrans %} {% trans %} auTotal {% endtrans %}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %} nomProduit {% endtrans %}</th>
                <th>{% trans %} prix {% endtrans %}</th>
                <th>{% trans %} marque {% endtrans %}</th>
                <th>{% trans %} description {% endtrans %}</th>
                <th>{% trans %} stock {% endtrans %}</th>
                <th>{% trans %} status {% endtrans %}</th>
                <th>{% trans %} taille {% endtrans %}</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for short in shorts %}
            <tr>
                <td>{{ short.id }}</td>
                <td>{{ short.nom }}</td>
                <td>{{ short.prix }}</td>
                <td>{{ short.marque }}</td>
                <td>{{ short.description }}</td>
                <td>{{ short.stock }}</td>
                <td>{{ short.Status }}</td>
                <td>{{ short.taille }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>
                        <a href="{{ path('app_short_show', {'id': short.id}) }}" class="btn btn-sm btn-info">{% trans %} voir {% endtrans %}</a>
                        <a href="{{ path('app_short_edit', {'id': short.id}) }}" class="btn btn-sm btn-warning">{% trans %} modifier {% endtrans %}</a>
                    </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="9">{% trans %} pasEnregistrements {% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center my-4">
        {{ knp_pagination_render(shorts) }}
    </div>

    <a href="{{ path('app_short_new') }}" class='btn btn-outline-primary'>{% trans %} nouveauProduit {% endtrans %}</a>

</div>
{% endif %}
{% endblock %}