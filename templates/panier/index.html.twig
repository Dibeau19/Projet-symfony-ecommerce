{% extends 'base.html.twig' %}

{% block title %}{% trans %} monPanier {% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %} monPanier {% endtrans %}</h1>

    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>{% trans %} produit {% endtrans %}</th>
                    <th>{% trans %} prix {% endtrans %}</th>
                    <th>{% trans %} quantite {% endtrans %}</th>
                    <th>{% trans %} total {% endtrans %}</th>
                    <th>{% trans %} actions {% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.produit.nom }}</td> 
                        
                        <td>{{ item.produit.prix }} €</td>
                        
                        <td>{{ item.quantite }}</td>
                        
                        <td>{{ item.produit.prix * item.quantite }} €</td>
                        
                        <td>
                            <a href="{{ path('panier_remove', {id: item.produit.id}) }}" class="btn btn-danger btn-sm">
                                {% trans %} supprimer {% endtrans %}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total :</strong></td>
                    <td colspan="2"><strong>{{ total }} €</strong></td>
                </tr>
            </tfoot>
        </table>
        
        <div class="d-flex justify-content-end">
            <a href="{{ path('commande_index') }}" class="btn btn-success btn-lg">{% trans %} valideCommande {% endtrans %}</a>
        </div>

    {% else %}
        <div class="alert alert-info">
            {% trans %} panierVide {% endtrans %} <a href="/">{% trans %} retourBoutique {% endtrans %}</a>.
        </div>
    {% endif %}
{% endblock %}