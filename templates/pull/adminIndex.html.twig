{% extends 'base.html.twig' %}

{% block title %}{% trans %} pulls {% endtrans %} index{% endblock %}

{% block body %}


{% if is_granted('ROLE_ADMIN') %}
    <h1 class='text-center'>{% trans %} pulls {% endtrans %} index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{% trans %} nomProduit {% endtrans %}</th>
                <th>{% trans %} prix {% endtrans %}</th>
                <th>{% trans %} marque {% endtrans %}</th>
                <th>{% trans %} description {% endtrans %}</th>
                <th>{% trans %} stock {% endtrans %}</th>
                <th>{% trans %} status {% endtrans %}</th>
                <th>{% trans %} taille {% endtrans %}</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pull in pulls %}
            <tr>
                <td>{{ pull.id }}</td>
                <td>{{ pull.nom }}</td>
                <td>{{ pull.prix }}</td>
                <td>{{ pull.marque }}</td>
                <td>{{ pull.description }}</td>
                <td>{{ pull.stock }}</td>
                <td>{{ pull.status.value }}</td>
                <td>{{ pull.taille }}</td>
                <td>
                    <a href="{{ path('app_pull_show', {'id': pull.id}) }}">{% trans %} voir {% endtrans %}</a>
                    <a href="{{ path('app_pull_edit', {'id': pull.id}) }}">{% trans %} modifier {% endtrans %}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">{% trans %} pasEnregistrements {% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pull_new') }}" class='btn btn-outline-primary'>{% trans %} nouveauProduit {% endtrans %}</a>
{% endif %}
{% endblock %}